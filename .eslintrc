{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "jest": true
  },
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prettier/prettier": "error"
  },
  "extends": "standard",
  "globals": {
    "alert": true,
    "__DEV__": true
  },
  "plugins": [
    "prettier",
    "flowtype",
    "react"
  ]
}
